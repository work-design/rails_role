<%= render partial: 'show_govern', locals: { govern: @govern, expand: true } %>
<% if params[:expand].present? %>
  <% @govern.rules.each do |rule| %>
    <%= turbo_stream.replace "tr_#{rule.identifier}", partial: 'show_rule', locals: { rule: rule } %>
  <% end %>
<% else %>
  <%= render partial: 'show_rule', collection: @govern.rules, as: :rule %>
<% end %>
