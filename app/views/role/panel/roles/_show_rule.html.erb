<tr id="tr_<%= params[:controller_identifier].split('/').join('_') %>_<%= rule.action_name %>" data-controller="tree_remote" data-tree_remote-target="item">
  <td>
    <turbo-frame>
      <span style="width: 4.29em; display: inline-block"></span>
      <% if @role.has_role?(business: rule.business_identifier, namespace: rule.namespace_identifier, controller: rule.controller_name, action: rule.action_name) %>
        <%= button_to({ action: 'rule_off' }, params: { business: rule.business_identifier, namespace: rule.namespace_identifier, controller: rule.controller_name, action_name: rule.action_name }, method: :patch) do %>
          <i class="far fa-check-square fa-lg"></i>
        <% end %>
      <% else %>
        <%= button_to({ action: 'rule_on' }, params: { business: rule.business_identifier, namespace: rule.namespace_identifier, controller: rule.controller_name, action_name: rule.action_name }, method: :patch) do %>
          <i class="far fa-square fa-lg"></i>
        <% end %>
      <% end %>
      <span><%= rule.name %></span>
    </turbo-frame>
  </td>
</tr>
