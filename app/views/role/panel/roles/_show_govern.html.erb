<tr id="tr_<%= govern.identifier.split('/').join('_') %>" data-controller="tree_remote" data-tree_remote-target="item">
  <td>
    <turbo-frame>
      <span style="width: 2.86em; display: inline-block"></span>
      <%= link_to({ action: 'rules', controller_identifier: govern.identifier }) do %>
        <i class="fas fa-fw fa-caret-right" style="cursor: pointer" data-action="click->tree_remote#expand"></i>
      <% end %>
      <% if @role.has_role?(business: params[:business_identifier], namespace: params[:namespace_identifier], controller: govern.controller_name) %>
        <%= button_to({ action: 'govern_off' }, params: { business_identifier: params[:business_identifier], namespace_identifier: params[:namespace_identifier], controller_name: govern.controller_name }, method: :patch) do %>
          <i class="far fa-check-square fa-lg"></i>
        <% end %>
      <% else %>
        <%= button_to({ action: 'govern_on' }, params: { business_identifier: params[:business_identifier], namespace_identifier: params[:namespace_identifier], controller_name: govern.controller_name }, method: :patch) do %>
          <i class="far fa-square fa-lg"></i>
        <% end %>
      <% end %>
      <span><%= govern.name %></span>
    </turbo-frame>
  </td>
</tr>
