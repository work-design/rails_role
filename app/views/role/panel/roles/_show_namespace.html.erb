<tr id="tr_<%= params[:business_identifier] %>_<%= name_space.identifier %>" data-controller="tree_remote">
  <td>
    <span style="width: 1.43em; display: inline-block"></span>
    <%= link_to({ action: 'governs', business_identifier: params[:business_identifier], namespace_identifier: name_space.identifier }, remote: true) do %>
      <i class="fas fa-fw fa-caret-right" style="cursor: pointer" data-action="click->tree_remote#expand"></i>
    <% end %>
    <% if @role.has_role?(business: params[:business_identifier], namespace: name_space.identifier) %>
      <%= button_to({ action: 'namespace_off' }, params: { business_identifier: params[:business_identifier], namespace_identifier: name_space.identifier }, method: :patch, remote: true) do %>
        <i class="far fa-check-square fa-lg"></i>
      <% end %>
    <% else %>
      <%= button_to({ action: 'namespace_on' }, params: { business_identifier: params[:business_identifier], namespace_identifier: name_space.identifier }, method: :patch, remote: true) do %>
        <i class="far fa-square fa-lg"></i>
      <% end %>
    <% end %>
    <span><%= name_space.name %></span>
  </td>
</tr>
